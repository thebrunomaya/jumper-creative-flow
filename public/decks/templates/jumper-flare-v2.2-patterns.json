  "design_philosophy": {
    "name": "Linear Design",
    "inspiration": "Linear.app aesthetic - clean, minimal, dramatic",
    "core_principles": [
      "ASYMMETRIC: Split layouts with 1fr:1.5fr ratio, never 50/50",
      "DRAMATIC TYPOGRAPHY: Large titles in corners, not centered",
      "SINGLE ACCENT: Orange (#FA4721) is the only accent color",
      "NEGATIVE SPACE: Intentional voids create visual breathing room",
      "CORNERS: Content distributed to edges, center often empty",
      "LEFT-ALIGNED: Text NEVER centered except logo in closing slide",
      "FLAT: No glass-morphism, solid backgrounds only",
      "SQUARE: No border-radius on UI elements (charts excepted)"
    ],
    "layout_patterns": {
      "split": "Left panel (narrow) with label + title, right panel (wider) with content",
      "corners": "Content in corners (top-left, bottom-left), footer with arrow + insight",
      "full": "Full slide with dramatic centered element (big numbers, closing)"
    }
  },
